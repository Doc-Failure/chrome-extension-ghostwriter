{
  "manifest_version": 3,
  "name": "ghost writer assistant",
  "version": "1.0",
  "description": "Your AI assistant for writing and rewriting text.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ghost.png",
      "32": "ghost.png",
      "48": "ghost.png",
      "128": "ghost.png"
    },
    "default_title": "Ghost Writer Assistant"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "ghost.png",
    "32": "ghost.png",
    "48": "ghost.png",
    "128": "ghost.png"
  },
  "commands": {
    "grammar-check-replace": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Check grammar and auto-replace selected text"
    }
  }
}
